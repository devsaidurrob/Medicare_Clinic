@* File: Views/Shared/_Layout.cshtml *@
@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hospital Management System</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" />
    <!-- SweetAlert2 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" />
    <!-- Select 2-->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <!--Quill Editor CSS-->
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/css/Site.css" rel="stylesheet" />
    <link href="~/css/loader.css" rel="stylesheet" />
</head>
<body>
    <!-- Top Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white fixed-top">
        <div class="container-fluid">
            <!-- Brand/Logo -->
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <i class="bi bi-hospital me-2"></i>MediCare
            </a>

            <!-- Sidebar Toggle -->
            <button class="btn btn-sm btn-outline-secondary me-2" type="button" id="sidebarToggle">
                <i class="bi bi-list"></i>
            </button>

            <!-- Search -->
            @* <div class="search-container">
                <form class="d-flex">
                    <div class="input-group">
                        <input class="form-control" type="search" placeholder="Search patients, doctors..." aria-label="Search">
                        <button class="btn btn-primary" type="submit">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </form>
            </div> *@

            <!-- User Dropdown -->
            <div class="dropdown ms-auto">
                <a href="#" class="d-flex align-items-center text-dark text-decoration-none dropdown-toggle"
                   id="dropdownUser" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="@User.FindFirst("ProfilePhoto")?.Value" alt="User" class="rounded-circle me-2" style="height: 40px;width: 40px;" />
                    <strong>@User.FindFirst("FullName")?.Value</strong>
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownUser">

                    <li class="dropdown-header">
                        <div><strong>@User.FindFirst(ClaimTypes.Name)?.Value</strong></div>
                        <div class="small">+91 @User.FindFirst(ClaimTypes.MobilePhone)?.Value</div>
                        <div class="small">@User.FindFirst(ClaimTypes.Email)?.Value</div>
                    </li>

                    <li><hr class="dropdown-divider" /></li>

                   @*  <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile"><i class="bi bi-person me-2"></i>Profile</a></li>
                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Settings"><i class="bi bi-gear me-2"></i>Settings</a></li> *@
                    @* <li><hr class="dropdown-divider" /></li> *@
                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout"><i class="bi bi-box-arrow-right me-2"></i>Sign out</a></li>
                </ul>
            </div>

        </div>
    </nav>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <ul class="nav flex-column">
            <li class="nav-item"><a class="nav-link active" asp-controller="Home" asp-action="Index"><i class="bi bi-speedometer2"></i><span>Dashboard</span></a></li>
            @if (User.IsInRole("Admin") || User.IsInRole("Receptionist"))
            {
                <li class="nav-item"><a class="nav-link" asp-controller="Doctor" asp-action="Index"><i class="bi bi-person-badge"></i><span>Doctors</span></a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Appointment" asp-action="Index"><i class="bi bi-calendar-check"></i><span>Appointments</span></a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="Index"><i class="bi bi-people-fill"></i><span>Users</span></a></li>
            }
            else if (User.IsInRole("Doctor"))
            {
                <li class="nav-item"><a class="nav-link" asp-controller="Doctor" asp-action="Appointments"><i class="bi bi-calendar-check"></i><span>My Appointments</span></a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Doctor" asp-action="Profile"><i class="bi bi-person-badge"></i><span>Profile</span></a></li>
            }
            <li class="nav-item"><a class="nav-link" asp-controller="Settings" asp-action="Index"><i class="bi bi-gear"></i><span>Settings</span></a></li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        @RenderBody()
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/js/uiHelper.js"></script>
    <script src="~/js/ajaxHelper.js"></script>
    <script src="~/js/customDataTable.js"></script>
    <script src="~/js/customDropdown.js"></script>

    @RenderSection("Scripts", required: false)

    <script>
        // Sidebar toggle
        document.getElementById('sidebarToggle').addEventListener('click', function () {
            document.getElementById('sidebar').classList.toggle('collapsed');
            const icon = this.querySelector('i');
            if (document.getElementById('sidebar').classList.contains('collapsed')) {
                icon.classList.replace('bi-list', 'bi-layout-sidebar');
            } else {
                icon.classList.replace('bi-layout-sidebar', 'bi-list');
            }
        });

        // Tooltip on sidebar
        const sidebarLinks = document.querySelectorAll('.sidebar .nav-link');
        sidebarLinks.forEach(function (link) {
            new bootstrap.Tooltip(link, {
                trigger: 'hover',
                placement: 'right',
                title: link.querySelector('span').textContent
            });
        });
    </script>
</body>
</html>
